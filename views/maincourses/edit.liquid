{% layout 'layout.liquid' %}
{% block content %}
<div class = "newCardPage">
    <div class="container-sm">
        <form action="/maincourses/{{maincourse.id}}?_method=PUT" method="POST">
            <fieldset>
                <legend>Edit {{maincourse.name}}
                </legend>
                <label class="form-label"> Name: </label>
                <input class="form-control" type="text" name="name" placeholder="enter the name of the maincourse" value="{{ maincourse.name }}">
                <label class="form-label">Plant Based:</label>
                <input 
                    type="checkbox" 
                    name="plantBased" 
                    class="form-check-input"
                    {% if maincourse.plantBased %}
                        checked
                    {% endif %}>
                <label class="form-label">Vegetarian:</label>
                <input 
                    type="checkbox" 
                    name="vegetarian" 
                    class="form-check-input"
                    {% if maincourse.vegetarian %}
                        checked
                    {% endif %}>
                <label class="form-label">Dairy Free:</label>
                <input 
                    type="checkbox" 
                    name="dairyFree" 
                    class="form-check-input"
                    {% if maincourse.dairyFree %}
                        checked
                    {% endif %}>
                <label class="form-label">Meat:</label>
                <input 
                    type="checkbox" 
                    name="hasMeat" 
                    class="form-check-input"
                    {% if maincourse.hasMeat %}
                        checked
                    {% endif %}>
                <label class="form-label">Gluten:</label>
                <input 
                    type="checkbox" 
                    name="glutenFree" 
                    class="form-check-input"
                    {% if maincourse.glutenFree %}
                        checked
                    {% endif %}>
                <label class="form-label">Ingredients: </label>
                    <input class="form-control" type="text" name="ingredients" placeholder="enter the ingredients" value="{{ maincourse.ingredients }}">
                <label class="form-label">Directions: </label>
                    <input class="form-control" type="text" name="directions" placeholder="enter the directions" value="{{ maincourse.directions }}">
                <label class="form-label">Note: </label>
                    <input class="form-control" type="text" name="note" placeholder="enter note" value="{{ maincourse.note }}">
            </fieldset>
            <input class="btn btn-secondary" type="submit" value="Edit {{maincourse.name}}">
        </form>
    </div>
</div>
{% endblock %}