{% layout 'layout.liquid'%}
{% block content %}
<div>
    <h2 class="display-6">All Recipes</h2>
    <div class="row">
        {% for recipe in recipes %}
        <div class="card" style="width: 18rem;">
            <h5 class="card-header">{{ recipe.name }}</h5>
            <div class="card-body">
                <p class="card-text">
                    {%- comment -%} Plant Based {{ recipe.plantBased }} {%- endcomment -%}
                    {% if recipe.plantBased %}
                        Plant Based
                    {% else %}
                        Not plant based
                    {% endif %}
                </p>
                <p class="card-text">
                    {% if recipe.vegetarian %}
                        vegetarian
                    {% else %}
                        Not vegetarian 
                    {% endif %}
                </p>
                <p class="card-text">
                   {% if recipe.dairyFree %}
                        Dairy free
                    {% else %}
                        Not dairy free
                    {% endif %}
                </p>
                <p class="card-text">
                    {% if recipe.hasMeat %}
                        Contains meat
                    {% else %}
                        No meat
                    {% endif %}
                </p>
                <p class="card-text">
                    {% if recipe.glutenFree %}
                        Gluten free
                    {% else %}
                        Not gluten free
                    {% endif %}
                </p>
                <a href="/recipes/{{ recipe.id }}" class="btn btn-info">
                    View {{ recipe.name }}
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}